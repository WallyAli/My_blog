<%= form_for (@post) do |post| %>

  <%= render 'shared/errors' %>

  <p>
    <%= post.label :title %><br>
    <%= post.text_field :title, class: 'title' %>
  </p>
 
  <p>
    <%= post.label :content %><br>
    <%= post.text_area :content, cols: 80, rows: 20, class: 'content' %>
  </p>
 
  <p>
    <%= post.submit %>
    <%= link_to 'Back', posts_path %>
  </p>
<% end %>
 
